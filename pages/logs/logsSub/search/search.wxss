.search-con {
  /* position: relative; */
  width: 668rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: 1rpx solid #f1f1f1;
  margin: 0 auto;

  /* 是图片和文字一行 */
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 32rpx;
}

.search-img {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 37rpx;
  margin-right: 14rpx;
}

/* 搜索框 */
.search {
  max-width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #999999;
  display: inline-block;
}


.position-v {
  width: 86rpx;
  height: 86rpx;
  position: absolute;
  bottom: 40rpx;
  left: 33rpx;
  border-radius: 50%;
  /* -moz-box-shadow:0px 0px 10px #00000056;
  -webkit-box-shadow:0px 0px 10px #00000056;
  box-shadow:0px 0px 10px #00000056; */
}

.position-img {
  width: 100%;
  height: 100%;
}

.list-con {
  width: 100%;

  /* 是图片和文字一行 */
  /* display: flex;
  flex-direction: row;
  align-items: center; */
}

.row {
  width: 100%;
  height: 100rpx;
  margin-left: 32rpx;
  margin-right: 26rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.row-titv {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333333;
  float: left;
}

.tit {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333333;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;/* 超出部分显示省略号 */
  white-space: nowrap;/*规定段落中的文本不进行换行 */
}

.sub-tit {
  height: 25rpx;
  line-height: 25rpx;
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;/* 超出部分显示省略号 */
  white-space: nowrap;/*规定段落中的文本不进行换行 */
}

.sele-img {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-left: 25rpx;
  margin-top: 25rpx;
}