/* pages/my/mySub/progress/progress.wxss */

.set-background {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 150px;
  width: 100%;
}

.background-content {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 300rpx;
}
.background-image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.pic {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 30rpx;
  font-size: 72rpx;
  color: #1296db;
  text-align: center;
  font-weight: bold;
}

.tit {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  font-weight: bold;
}


.time {
  margin: 0rpx 32rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 60rpx;
  text-align: right;
}

.con-img {
  height: 380rpx;
  margin: 0rpx 32rpx;
}