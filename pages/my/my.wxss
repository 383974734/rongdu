/* pages/my/my.wxss */
page {
  background-color: #f1f1f1;
}
.navbar-v {
  position: fixed;
  width: 100%;
  z-index: 999;
  background-color: white;
  top: 0;
}

.navbar {
  width: 100%;
  height: 46px;
  position: absolute;
	bottom: 0;
}


/* 头部用户信息-view */
.header-view {
  width: 100%;
  height: 324rpx;
  background-color: #ffffff;
  overflow: hidden;
  text-align: center;
}

/* 用户头像 */
.user-img {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  padding-top: 24rpx;
  display: inline-block;
}

/* 用户名 */
.user-name {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 48rpx;
  color: #2e2e2e;
}

/* 分类选项 */
.list-view {
  width: 100%;
}

.sections {
  border-top: 20rpx solid #f1f1f1;
}

/* 分类父试图容器 */
.listTow-bs{
  overflow: hidden;
  background-color: #ffffff;
  margin-bottom: 25rpx;
}

.listTow-b {
  overflow: hidden;
  background-color: #ffffff;
}

.lis-v {
  height: 1rpx;
  margin-right: 0rpx;
  margin-left: 94rpx;
  background-color: #f1f1f1;
}

/* 分类图片 */
.listTow-img {
  width: 48rpx;
  height: 48rpx;
  float: left;
  margin: 27rpx 20rpx 0rpx 30rpx;
}

/* 分类文字 */
.listTow-tit {
  float: left;
  font-size: 34rpx;
  height: 100%;
  line-height: 100rpx;
}

.listTow-push {
  float: right;
  width: 75rpx;
  height: 25rpx;
  margin-top: 40rpx;
  margin-right: 25rpx;
}

.listTow-x {
  width: 100%;
  height: 5rpx;
  background-color: #f7f7f7;
}

.listTow-xs {
  width: 100%;
  height: 25rpx;
  background-color: #f7f7f7;
}
